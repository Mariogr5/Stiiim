<div class="container-md">
        <div class="row">
        @foreach (var gra in Model)
        {

            <div class="col-4 text-center" style="max-width:20rem">
                <a class="justify-content-center" href=@Url.Action("Opis","Home", new {id=@gra.Id})>
                    <div>
                        <img class="rounded border border-dark border-3" src="~/images/@gra.Zdjęcie" style="height: 10rem; width: 10rem; margin-top: 40px"/>
                    </div>
                    <div class="text-center">
                        <h5 style="font-family: 'Arial Rounded MT' font-size:25px;color:black; text-decoration:none">@Html.DisplayFor(modelItem => gra.Nazwa)</h5>
                        <h8>@Html.DisplayFor(modelItem => gra.Cena) zł</h8>
                    </div>
                </a>
            </div>
        }
        </div>
    </div>

